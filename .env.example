# Configuration du Bot Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://votre-domaine.com/webhook

# Configuration de la base de données
DATABASE_PATH=./data/bot_config.db

# Configuration du panel admin
ADMIN_PORT=3000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
SESSION_SECRET=your_session_secret_here_change_this

# Configuration du serveur
NODE_ENV=production
DOMAIN=votre-domaine.com

# Configuration Cloudflare D1 (production)
D1_DATABASE_ID=fe5c3cd2-78a5-41c5-92b9-0d8648e61c22
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Configuration de sécurité
JWT_SECRET=your_jwt_secret_here_change_this
BCRYPT_ROUNDS=12

# Configuration des uploads
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Configuration des logs
LOG_LEVEL=info
LOG_PATH=./logs